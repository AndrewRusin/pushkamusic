server {
  listen 80;

  server_name pushkamusic.online;

  location / {
    proxy_pass http://frontend:3000;
     client_max_body_size 20M; # Максимальный размер тела запроса для корневой директории.
  }

  location /api {
    proxy_pass http://api:3001;
     client_max_body_size 20M; # Максимальный размер тела запроса для корневой директории.
  }
  location /static/ {
    alias /etc/nginx/../api/uploads/;       
  }
}
